<Window x:Class="TradeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeApp"
        mc:Ignorable="d"
        Title="Autorization" Height="1080" Width="1920" WindowState="Maximized" >
    <Grid>
        <Border Background="#FF76E383" CornerRadius="30"
            Padding="5" Margin="460,100,460,188" />
        <StackPanel Margin="490,100,490,188" Background="#FF76E383">
            <TextBlock Text="Authorization" Margin="0 20 0 0" FontSize="60" HorizontalAlignment="Center"  FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FF054A13" />
            <TextBlock Text="Enter your username:" Margin="0 30 0 0" FontSize="48" HorizontalAlignment="Left"  FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FF054A13" />
            <TextBox x:Name="LoginBox"  Height="60" FontSize="40" BorderBrush="#FF498C51" BorderThickness="2" Foreground="#FF054A13" />
            <TextBlock Text="Enter your password:" Margin="0 30 0 0" FontSize="48" HorizontalAlignment="Left" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FF054A13" />
            <PasswordBox x:Name="PassBox"  Height="60" FontSize="40" BorderBrush="#FF498C51" BorderThickness="2" Foreground="#FF054A13" />
            <Button x:Name="LogInBtn" Height="70" Width="552" Margin="0 30 0 0" Content="Log in" FontSize="48"  BorderThickness="0" FontWeight="Bold" FontFamily="Comic Sans MS" Background="#FF498C51" Foreground="#FF054A13" Click="LogInBtn_Click" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="LogInAsGuestBtn" Height="60" Width="552" Margin="0 30 0 0" Content="Log in as a guest" FontSize="32" BorderThickness="0" FontWeight="Bold" FontFamily="Comic Sans MS" Background="#FF498C51" Foreground="#FF054A13" Click="LogInAsGuestBtn_Click" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="ExitBtn"  Height="60" Width="552" Margin="0 50 0 0" Content="Exit" FontSize="40" BorderThickness="0" FontWeight="Bold" FontFamily="Comic Sans MS" Background="#FF498C51" Foreground="#FF054A13" Click="ExitBtn_Click" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        
    </Grid>
</Window>
